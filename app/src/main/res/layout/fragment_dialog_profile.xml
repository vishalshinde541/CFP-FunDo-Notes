<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.funDoNotes.view.DialogProfileFragment">

   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="#83F0F4">

       <ImageButton
           android:id="@+id/dialog_dismissBtn"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_marginStart="10dp"
           android:layout_marginTop="10dp"
           android:layout_marginEnd="10dp"
           android:layout_marginBottom="10dp"
           android:background="@null"
           android:src="@drawable/ic_baseline_close_24"
           android:text="Close" />

       <de.hdodenhof.circleimageview.CircleImageView
           android:id="@+id/dialog_circularProfilePic"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_below="@+id/dialog_dismissBtn"
           android:layout_centerHorizontal="true"
           android:layout_marginStart="15dp"
           android:layout_marginTop="15dp"
           android:layout_marginEnd="15dp"
           android:layout_marginBottom="4dp"
           android:foregroundGravity="center"
           android:src="@drawable/dummy_profile_pic" />

       <TextView
           android:id="@+id/save_profileImg"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/dialog_circularProfilePic"
           android:layout_marginStart="8dp"
           android:layout_marginTop="2dp"
           android:layout_marginEnd="8dp"
           android:layout_marginBottom="6dp"
           android:text="@string/save_profileImg"
           android:textAlignment="center"
           android:textColor="?attr/actionModeSplitBackground"
           android:textSize="12dp" />

       <TextView
           android:id="@+id/dialog_fname"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/save_profileImg"
           android:layout_margin="5dp"
           android:text="First Name"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:textSize="22sp" />

       <TextView
           android:id="@+id/dialog_lname"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/dialog_fname"
           android:layout_marginStart="5dp"
           android:layout_marginTop="5dp"
           android:layout_marginEnd="5dp"
           android:layout_marginBottom="5dp"
           android:text="Last Name"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:textSize="22sp" />

       <TextView
           android:id="@+id/dialog_email"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/dialog_lname"
           android:layout_margin="5dp"
           android:text="Email"
           android:textAlignment="center"
           android:textColor="@color/black"
           android:textSize="18sp" />

   </RelativeLayout>

</RelativeLayout>