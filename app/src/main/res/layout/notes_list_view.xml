<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notes_container"
    android:layout_margin="10dp"
    android:elevation="8dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_ViewRow"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesContainer_tvTitle"
                android:text="Title"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:padding="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/notesContainer_tvSubtitle"
                android:layout_below="@id/notesContainer_tvTitle"
                android:text="Subtitle"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:padding="8dp"/>

<!--            <TextView-->
<!--                android:id="@+id/textViewOptions"-->
<!--                android:layout_width="25dp"-->
<!--                android:layout_height="25dp"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_alignParentTop="true"-->
<!--                android:layout_margin="8dp"-->
<!--                android:text="&#8942;"-->
<!--                android:textAppearance="?android:textAppearanceLarge" />-->
<!--            -->

            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/menuImageBtn"
                android:src="@drawable/ic_note_menu_icon"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:background="@null"
                android:layout_marginEnd="8dp"
                android:visibility="visible"/>


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/notesContainer_tvNoteContent"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Contet"
            android:textSize="12sp"
            android:textStyle="normal"
            android:maxLines="10"
            android:padding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/notesContainer_tvDate"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Date"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textSize="10sp"
            android:textStyle="normal"
            android:maxLines="10"
            android:padding="8dp"/>


    </LinearLayout>




</androidx.cardview.widget.CardView>